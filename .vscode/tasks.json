{
    "tasks": [
      {
        "type": "cppbuild",
        "label": "C/C++: clang++ build all source files",
        "command": "/usr/bin/clang++",
        "args": [
          "-std=gnu++14",
          "-fcolor-diagnostics",
          "-fansi-escape-codes",
          "-g",
          "-I${fileDirname}",
          "main.cpp",
          "FINAL.cpp",
          "-o",
          "${fileDirname}/main"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Build all source files together"
      }
    ],
    "version": "2.0.0"
  }